<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b11">

    <LinearLayout
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/logo_intro"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            />

    </LinearLayout>

    <!--=====linear layout for login page====-->

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_phoneno"
                android:layout_width="match_parent"
                android:hint="@string/phoneno"
                android:textStyle="italic"
                android:textSize="10dp"
                android:textColor="@color/colorred"
                android:textColorHint="@color/colorred"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edittext_shape"
                android:layout_height="30dp" />

            <LinearLayout
                android:id="@+id/login_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="@string/login"
                    android:textSize="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/colorwhite"
                    android:textStyle="bold"
                    android:background="@drawable/shape"/>

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:background="@drawable/shape"
                    android:text="@string/signup"
                    android:textColor="@color/colorwhite"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_somedia_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"

                    android:src="@drawable/fbicon"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/googleicon"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--=====linear layout for login password page====-->

    <LinearLayout
     android:id="@+id/login_password"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/password_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:hint="Password"
                android:textStyle="italic"
                android:textSize="12dp"
                android:textColor="@color/colorred"
                android:textColorHint="@color/colorred"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edittext_shape"
                android:layout_height="35dp" />
            <TextView
                android:id="@+id/forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorred"
                android:textSize="10dp"
                android:textStyle="italic"
                android:layout_marginRight="30dp"
                android:text="Forget Password?"/>
            <Button
                android:id="@+id/btn_loginnext"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/next"
                android:textSize="15dp"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                android:background="@drawable/shape"/>


        </LinearLayout>
    </LinearLayout>

    <!--=====linear layout for signup page====-->

    <LinearLayout
        android:id="@+id/signup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sign_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/sign_phoneno."
                android:layout_width="match_parent"
                android:hint="@string/phoneno"
                android:textStyle="italic"
                android:textSize="10dp"
                android:textColor="@color/colorred"
                android:textColorHint="@color/colorred"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edittext_shape"
                android:layout_height="30dp" />
            <Button
                android:id="@+id/btn_signupotp"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="@string/SendOTP"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:background="@drawable/shape"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"

                    android:src="@drawable/fbicon"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/googleicon"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginRight="30dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--=====linear layout for signup_card page====-->

    <LinearLayout
        android:id="@+id/signup_card"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/card_edit"
                android:layout_width="match_parent"
                android:hint="@string/muflarcardno"
                android:textStyle="italic"
                android:textSize="12dp"
                android:textColor="@color/colorred"
                android:textColorHint="@color/colorred"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edittext_shape"
                android:layout_height="35dp" />
            <Button
                android:id="@+id/btn_signupcard"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="@string/next"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                android:background="@drawable/button_shape"/>
        </LinearLayout>
    </LinearLayout>

    <!--=====linear layout for signup_password page====-->

    <LinearLayout
        android:id="@+id/signup_password"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/password_logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/pass_edit"
                android:layout_width="match_parent"
                android:hint="@string/password"
                android:textStyle="italic"
                android:textSize="10dp"
                android:textColor="@color/colorred"
                android:textColorHint="@color/colorred"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edittext_shape"
                android:layout_height="35dp" />
            <EditText
                android:id="@+id/confrim_pass"
                android:layout_width="match_parent"
                android:hint="@string/confirmpassword"
                android:textStyle="italic"
                android:textSize="10dp"
                android:textColor="@color/colorred"
                android:textColorHint="@color/colorred"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edittext_shape"
                android:layout_height="35dp" />
            <Button
                android:id="@+id/signup_passnext"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="@string/next"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="@drawable/shape"/>


        </LinearLayout>
    </LinearLayout>

    <!--=====linear layout for signuup_otp page====-->

    <LinearLayout
        android:id="@+id/signuup_otp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#15ffffff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/otp_logo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorred"
                    android:textSize="10dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/enterotp"/>
                <LinearLayout
                    android:id="@+id/otp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/first"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:hint="0"
                            android:textStyle="bold"
                            android:layout_gravity="center|center_vertical"
                            android:maxLength="1"
                            android:textColor=" #afafaf"
                            android:textColorHint="#45ffffff"
                            android:textSize="80dp"
                            android:background="@android:color/transparent"
                            />
                        <View
                            android:layout_width="60dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="#45000000"></View>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/second"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:hint="0"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:maxLength="1"
                            android:textColor=" #afafaf"
                            android:textColorHint="#45ffffff"
                            android:textSize="80dp"
                            android:background="@android:color/transparent"
                            />
                        <View
                            android:layout_width="60dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="#45000000"></View>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/third"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:hint="0"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:maxLength="1"
                            android:textColor=" #afafaf"
                            android:textColorHint="#45ffffff"
                            android:textSize="80dp"
                            android:background="@android:color/transparent"
                            />
                        <View
                            android:layout_width="60dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="#45000000"></View>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/fourth"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:hint="0"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:maxLength="1"
                            android:textColor=" #afafaf"
                            android:textColorHint="#45ffffff"
                            android:textSize="80dp"
                            android:background="@android:color/transparent"
                            />
                        <View
                            android:layout_width="60dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="#45000000"></View>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/otp_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:textColor="@color/colorred"
                    android:textSize="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/resendotp"/>
                <Button
                    android:id="@+id/btn_verify"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="@string/verify"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="80dp"
                    android:textColor="@color/colorwhite"
                    android:textStyle="bold"
                    android:background="@drawable/shape"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--=====linear layout for login page====-->
</LinearLayout>